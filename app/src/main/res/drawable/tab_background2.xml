<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval" android:useLevel="false">
                    <padding android:bottom="0dp" android:left="10dp" android:right="10dp" android:top="0dp" />
                    <solid android:color="@color/colorBlack" />
                    <size android:width="20dp" android:height="20dp" />
                </shape>

            </item>
        </layer-list>
    </item>

    <item android:state_selected="false">
        <layer-list>
            <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval" android:useLevel="false">
                    <padding android:bottom="0dp" android:left="10dp" android:right="10dp" android:top="0dp" />
                    <stroke android:width="0.5dp" android:color="@color/colorBlack" />
                    <size android:width="20dp" android:height="20dp" />
                </shape>

            </item>
        </layer-list>
    </item>

</selector>
